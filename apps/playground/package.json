{
  "name": "@aurora/playground",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm --dts false",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "node ../../tooling/scripts/noop-lint.mjs",
    "test": "vitest run"
  },
  "dependencies": {
    "@aurora/runtime-server": "workspace:*",
    "@aurora/router": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8"
  }
}

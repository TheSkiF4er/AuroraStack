{
  "name": "aurorastack",
  "private": true,
  "version": "1.0.0",
  "description": "AuroraStack is a full-stack TypeScript framework with a unified data schema, universal rendering, and built-in support for AI and best-practice patterns.",
  "license": "Apache-2.0",
  "author": "TheSkiF4er <opensource@cajeer.com>",
  "homepage": "https://cajeer.com/AuroraStack",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheSkiF4er/AuroraStack.git"
  },
  "bugs": {
    "url": "https://github.com/TheSkiF4er/AuroraStack/issues",
    "email": "opensource@cajeer.com"
  },
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "turbo dev --parallel",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier -w .",
    "codegen": "turbo codegen",
    "db:migrate": "turbo db:migrate",
    "release": "changeset version && turbo build && changeset publish",
    "changeset": "changeset",
    "clean": "turbo clean && rimraf node_modules .turbo **/dist **/.tsbuildinfo"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.10",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.8",
    "@types/node": "^22.10.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2"
  }
}
